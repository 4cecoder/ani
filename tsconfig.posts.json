{
  "extends": "./tsconfig.json",
  "include": [
    "components/ui/post-*.tsx",
    "components/ui/search-posts.tsx",
    "convex/posts.ts",
    "lib/hooks/useHangout.ts",
    "types/posts.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true
  }
}